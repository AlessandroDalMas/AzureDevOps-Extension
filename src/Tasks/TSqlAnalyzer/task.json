{
    "id": "{{GUID PLACEHOLDER}}",
    "name": "tSqlAnalyzer",
    "friendlyName": "T-Sql Analyzer",
    "description": "Scan T-Sql code and calculate metrics",
    "helpMarkDown": "",
    "category": "Utility",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Team Raptors",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "T-Sql $(version) Analyzer",
    "inputs": [
        {
            "name": "path",
            "type": "filePath",
            "label": "Sql files path",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Insert sql files path."
        },
        {
            "name": "version",
            "type": "pickList",
            "label": "T-Sql Version:",
            "defaultValue": "130",
            "required": true,
            "helpMarkDown": "T-Sql Version to use during analysis.",
            "options": {
                "80": "80",
                "90": "90",
                "100": "100",
                "110": "110",
                "120": "120",
                "130": "130",
                "140": "140"
            },
            "properties": {
                "EditableOptions": "False"
            }
        },
        {
            "name": "levelError",
            "type": "string",
            "label": "Threshold error (number):",
            "defaultValue": "100",
            "required": true,
            "helpMarkDown": "Indicate the threshold for build errors."
        },
        {
            "name": "levelWarn",
            "type": "string",
            "label": "Threshold warning (number):",
            "defaultValue": "50",
            "required": true,
            "helpMarkDown": "Indicate the threshold for build warnings."
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}